<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/company_info"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_dark_blue_underline"
            android:gravity="center"
            android:text="基本信息"
            android:textColor="@color/blue"
            android:textSize="@dimen/body_text" />

        <TextView
            android:id="@+id/authentication_info"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="认证信息"
            android:textColor="@color/text_color"
            android:textSize="@dimen/body_text" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_company_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:id="@+id/company_info_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="公司名称："
                    android:textSize="14sp"
                    android:layout_marginLeft="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_white"
                    android:ellipsize="end"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/company_info_company_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="所在地区："
                    android:textSize="14sp"
                    android:background="@drawable/bg_white"
                    android:layout_marginLeft="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:ellipsize="end"
                    android:singleLine="true"/>


                <TextView
                    android:id="@+id/company_info_products"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="主营产品："
                    android:textSize="14sp"
                    android:background="@drawable/bg_white"
                    android:layout_marginLeft="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:ellipsize="end"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/company_info_product_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="产品数量："
                    android:textSize="14sp"
                    android:background="@color/white"
                    android:layout_marginLeft="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:ellipsize="end"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp"
                android:background="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
               >
                <TextView
                    android:id="@+id/company_info_vip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="会员等级："
                    android:textSize="14sp"
                    android:background="@color/white"
                    android:layout_marginLeft="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:ellipsize="end"
                    android:singleLine="true"/>
            </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="交易评分"
                    android:layout_marginLeft="16dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/text_color_sub"
                    android:textSize="10sp"
                    />
                <TextView
                    android:id="@+id/company_info_describe"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="描述相符："
                    android:layout_marginLeft="16dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/company_info_service"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="服务态度："
                    android:layout_marginLeft="16dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/company_info_arrival"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="到货速度："
                    android:layout_marginLeft="16dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/company_info_contacts"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="联 系 人："
                    android:layout_marginLeft="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:background="@drawable/bg_white"
                    />
                <TextView
                    android:id="@+id/company_info_contact_add"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="联系地址："
                    android:layout_marginLeft="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />
            </LinearLayout>
        </LinearLayout>

            <Button
                android:id="@+id/company_info_phone"
                style="@style/text_white_bg_blue_btn_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="拨打电话"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_authentication_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="工商注册信息"
                android:textSize="10sp"
                android:layout_marginLeft="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/text_color_sub"
               />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/auth_info_company_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="公司名称："
                        android:textSize="14sp"
                        android:layout_marginLeft="16dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:background="@drawable/bg_white"
                        android:ellipsize="end"
                        android:singleLine="true"/>

                    <TextView
                        android:id="@+id/auth_info_company_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="经营地址："
                        android:textSize="14sp"
                        android:background="@drawable/bg_white"
                        android:layout_marginLeft="16dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        />


                    <TextView
                        android:id="@+id/auth_info_company_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="成立日期："
                        android:textSize="14sp"
                        android:background="@drawable/bg_white"
                        android:layout_marginLeft="16dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:singleLine="true"/>

                    <TextView
                        android:id="@+id/auth_info_company_operate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="经营范围："
                        android:textSize="14sp"
                        android:background="@drawable/bg_white"
                        android:layout_marginLeft="16dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:singleLine="true"/>
                    <TextView
                        android:id="@+id/auth_info_company_registration_mark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="注册号："
                        android:textSize="14sp"
                        android:background="@drawable/bg_white"
                        android:layout_marginLeft="16dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:singleLine="true"/>
                    <TextView
                        android:id="@+id/auth_info_company_corporation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="法人代表："
                        android:textSize="14sp"
                        android:background="@color/white"
                        android:layout_marginLeft="16dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
            <Button
                android:id="@+id/auth_info_phone"
                style="@style/text_white_bg_blue_btn_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="拨打电话"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>