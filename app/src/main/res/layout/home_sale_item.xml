<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bg_white_small"
            >

            <ImageView
                android:id="@+id/iv_home_sale_shop"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/ic_launcher"
                />

            <TextView
                android:id="@+id/home_sale_shopname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_home_sale_shop"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="6"
                android:singleLine="true"
                android:text="箭牌实木浴。。。。。"
                android:textColor="@color/black"
                android:textSize="@dimen/notes"/>

            <TextView
                android:id="@+id/home_sale_shop_discount_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_sale_shopname"
                android:gravity="center"
                android:text="8729.0元"
                android:textColor="#ff7300"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/home_sale_shop_original_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_sale_shop_discount_price"
                android:gravity="center"
                android:text="12620.0元"
                android:textColor="#999999"
                android:layout_marginBottom="4dp"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                />

        </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0折"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/home_sale_five"
                />
    </FrameLayout>
</LinearLayout>